{
  "type": "object",
  "properties": {
    "isLanding": {
      "type": "identifier",
      "selector": "#pwlanding",
      "control": "exists"
    },
    "logout": {
      "type": "action",
      "control": "action.link",
      "selector": "a",
      "selectContains": "Sign Out",
      "selectHidden": true
    },
    "menuGroup": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "menuOption": {
            "type": "string",
            "selector": "#navbar > li > a",
            "control": "property.innerText"
          },
          "menuAction": {
            "type": "action",
            "selector": "li > a",
            "control": "action.link"
          },
          "menuSubgroup": {
            "type": "array",
            "selectorAll": "ul",
            "items": {
              "type": "object",
              "properties": {
                "subgroupOption": {
                  "type": "string",
                  "selector": "li > a",
                  "control": "property.innerText"
                }
              }
            }
          }
        }
      }
    }
  },
  "connect": [
    {
      "match": [
        "isLanding"
      ],
      "screens": [
        "landing"
      ]
    }
  ]
}
