{
  "type": "object",
  "comment": "Login",
  "properties": {
    "username": {
      "type": "string",
      "label": "username",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "#username",
      "control": "text"
    },
    "password": {
      "type": "string",
      "label": "password",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "#password",
      "control": "text"
    },
    "errorMessage": {
      "type": "string",
      "label": "errorMessage",
      "update": {
        "type": "none"
      },
      "selector": ".alert.alert-danger.ng-binding",
      "control": "property.innerText"
    },
    "submit": {
      "type": "action",
      "parameters": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "selector": ".btn.btn-primary",
      "control": "action.click",
      "selectContains": "Login",
      "selectIndex": 1
    },
    "isLogin": {
      "type": "identifier",
      "selector": "#AdLoginButton",
      "control": "exists"
    },
    "submitADFS": {
      "type": "action",
      "selector": ".btn.btn-primary",
      "control": "action.button"
    }
  },
  "connect": [
    {
      "match": [
        "isLogin"
      ],
      "screens": [
        "login"
      ]
    }
  ]
}
